body
  padding 50px
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif

a
  color #00B7FF

h2
  margin-top 60px

border = 1px solid rgba(0, 0, 0, 0.15)

table
  border-collapse collapse
  table-layout fixed
  width 100%

th
td
  border-top border
  overflow-wrap break-word
  padding 8px 0

  tr:last-of-type &
    border-bottom border

th
  padding-right 8px

pre
  margin 0
  overflow auto
